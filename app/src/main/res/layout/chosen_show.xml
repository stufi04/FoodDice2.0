<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="stechb.myfirstapp.ShowChosen.java"
    android:gravity="center"
    android:background="@drawable/cooking"
    android:id="@+id/thisLayout"
   >

    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_alignTop="@+id/name_view"
        android:background="@drawable/left_arrow2"
        android:layout_alignParentLeft="true"
        android:id="@+id/leftArrow"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginTop="200dp"
        android:layout_alignTop="@+id/name_view"
        android:layout_centerVertical="true"
        android:background="@drawable/right_arrow2"
        android:layout_alignParentRight="true"
        android:id="@+id/rightArrow"/>

    <ImageView
        android:layout_height="278dp"
        android:layout_width="300dp"
        android:id = "@+id/meal_image"
        android:contentDescription="The meal image"
        android:background="#407F7F"

        android:padding="9dp"
        android:adjustViewBounds="true"
        android:layout_marginBottom="52dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/rightArrow"
        android:layout_toRightOf="@id/leftArrow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/name_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#0D4D4D"
        android:shadowColor="#FFF"
        android:shadowRadius="10.0"

        android:minHeight="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/rightArrow"
        android:layout_toRightOf="@id/leftArrow"
        />


</RelativeLayout>
